%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \definecolor{beamer@barcolor}{RGB}{227, 250, 250}% turquesa claro
  \definecolor{beamer@headercolor}{RGB}{0, 102, 102}% turquesa oscuro
  \definecolor{beamer@normaltextcolor}{RGB}{84,97,110}% gray blue
  \setbeamercolor{structure}{fg=beamer@headercolor}
  \setbeamercolor{normal text}{fg=beamer@normaltextcolor}
  \setbeamercolor{frametitle}{fg=white,bg=beamer@headercolor}
  \setbeamercolor{AAUsimple}{fg=beamer@barcolor,bg=beamer@headercolor}

  \setbeamercolor{block title}{bg=beamer@barcolor}
  \setbeamercolor{block title example}{bg=green!10}
  \setbeamercolor{block title alerted}{bg=red!10}

  \setbeamercolor{block body}{bg=black!5}
  \setbeamercolor{block body example}{bg=black!5}
  \setbeamercolor{block body alerted}{bg=black!5}

  \setbeamerfont{block title}{size=\normalsize}
  \setbeamerfont{block title example}{size=\normalsize}
  \setbeamerfont{block title alerted}{size=\normalsize}

  \setbeamertemplate{itemize items}{\small\faChevronCircleRight}
  \setbeamertemplate{itemize subitem}{\small\faArrowCircleORight}

  \setbeamertemplate{enumerate items}[circle]
}%end of beamer specific options

\mode<all>
